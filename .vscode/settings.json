{
  "editor.formatOnSave": true,
  "editor.rulers": [90], // Prettier: printWidth

  "files.associations": {
    ".eslintrc.json": "jsonc"
  },

  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "[markdown]": {
    "editor.rulers": [120] // Prettier: *.md printWidth
  }
}
